<UserControl x:Class="MooseTracks.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource AppBackground}"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <UserControl.Resources>
        <Style x:Key="SectionGroupBox" TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
            <Setter Property="Background" Value="{DynamicResource BoxesBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid SnapsToDevicePixels="True">
                            <Border CornerRadius="6"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Padding="{TemplateBinding Padding}">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Text="{TemplateBinding Header}"
                                               Foreground="{DynamicResource AppForeground}"
                                               FontWeight="Bold"
                                               Margin="0,0,0,6"/>
                                    <ContentPresenter Grid.Row="1" ContentSource="Content"/>
                                </Grid>
                            </Border>
                            <Rectangle RadiusX="6" RadiusY="6"
                                       IsHitTestVisible="False"
                                       Stroke="{DynamicResource AppBorderBrush}"
                                       StrokeThickness="{DynamicResource AppBorderStrokeThickness}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <GroupBox Header="Configuration" Style="{StaticResource SectionGroupBox}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True">
            <Grid x:Name="LayoutGrid" Margin="0" Grid.IsSharedSizeScope="True">
                <!-- Columns: Label | Half-width content | Spacer | Buttons -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Rows with invisible spacers -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 0: Default Window -->
                    <RowDefinition Height="Auto"/>
                    <!-- 1: Spacer -->
                    <RowDefinition Height="Auto"/>
                    <!-- 2: FFmpeg Path row -->
                    <RowDefinition Height="Auto"/>
                    <!-- 3: Spacer -->
                    <RowDefinition Height="Auto"/>
                    <!-- 4: Tooltips row -->
                </Grid.RowDefinitions>

                <!-- Default Window -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Default Window:" VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="{DynamicResource AppForeground}"/>
                <ComboBox x:Name="StartupPageCombo"
                          Grid.Row="0" Grid.Column="1"
                          Width="220" Height="22"
                          HorizontalAlignment="Left"
                          Foreground="Black"
                          Background="{DynamicResource BoxesBackgroundBrush}"
                          DisplayMemberPath="Label"
                          SelectedValuePath="Key"
                          ToolTip="{StaticResource TT.Settings.StartupPageCombo}"/>
                <Button Grid.Row="0" Grid.Column="3"
                        x:Name="SaveStartupButton" Content="Save"
                        Width="80" Padding="6,0"
                        Click="SaveStartupButton_Click"
                        ToolTip="{StaticResource TT.Settings.SaveStartupButton}"/>

                <!-- Invisible spacer -->
                <Separator Grid.Row="1" Grid.ColumnSpan="4" Opacity="0" Height="12"/>

                <!-- FFmpeg Path (Browse inline) + Save FFmpeg Path on same row (right column) -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="FFmpeg Path:" VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="{DynamicResource AppForeground}"/>
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="FFmpegPathTextBox"
                             Grid.Column="0"
                             Height="22" MinWidth="240"
                             HorizontalAlignment="Stretch"
                             ToolTip="{StaticResource TT.Settings.FFmpegPathTextBox}"/>
                    <Button x:Name="BrowseFFmpegButton"
                            Grid.Column="1"
                            Content="Browse"
                            Width="80" Padding="6,0"
                            Margin="8,0,0,0"
                            BorderBrush="{DynamicResource AppBorderBrush}"
                            Click="BrowseFFmpegButton_Click"
                            ToolTip="{StaticResource TT.Settings.BrowseFFmpegButton}"/>
                </Grid>
                <Button Grid.Row="2" Grid.Column="3"
                        x:Name="SaveFFmpegButton" Content="Save FFmpeg Path"
                        Width="120" Padding="6,0"
                        Click="SaveFFmpegButton_Click"
                        ToolTip="{StaticResource TT.Settings.SaveFFmpegButton}"/>

                <!-- Invisible spacer -->
                <Separator Grid.Row="3" Grid.ColumnSpan="4" Opacity="0" Height="12"/>

                <!-- Tooltips toggle -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="Tooltips:" VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="{DynamicResource AppForeground}"/>
                <CheckBox x:Name="EnableTooltipsCheckbox"
                          Grid.Row="4" Grid.Column="1"
                          Content="Enable tooltips"
                          VerticalAlignment="Center"
                          IsChecked="True"
                          ToolTip="{StaticResource TT.Settings.EnableTooltipsCheckbox}"/>
                <Button Grid.Row="4" Grid.Column="3"
                        x:Name="SaveTooltipsButton" Content="Save"
                        Width="80" Padding="6,0"
                        Click="SaveTooltipsButton_Click"
                        ToolTip="{StaticResource TT.Settings.SaveTooltipsButton}"/>
            </Grid>
        </ScrollViewer>
    </GroupBox>
</UserControl>

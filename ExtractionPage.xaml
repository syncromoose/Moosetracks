<UserControl x:Class="MooseTracks.Views.ExtractionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="700" Width="922"
             Background="{DynamicResource AppBackground}">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="234.731"/>
            <RowDefinition Height="33.269"/>
        </Grid.RowDefinitions>

        <!-- Left panel -->
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical" Margin="0,0,15,0">

            <!-- Input File -->
            <GroupBox Header="Input File" Foreground="{DynamicResource AppForeground}" Background="{DynamicResource AppBackground}" BorderBrush="{DynamicResource AppBorderBrush}" BorderThickness="1" Margin="0,0,0,10">
                <DockPanel Margin="5">
                    <TextBox x:Name="InputFilePathBox" Width="400" IsReadOnly="True" Foreground="{DynamicResource AppForeground}" Background="{DynamicResource AppBackground}" BorderBrush="{DynamicResource AppBorderBrush}" BorderThickness="1"/>
                    <Button x:Name="BrowseInputButton" Content="Browse" Width="80" Margin="5,0,0,0" Click="BrowseInputButton_Click"/>
                </DockPanel>
            </GroupBox>

            <!-- Extraction List -->
            <GroupBox Header="Extraction" Foreground="{DynamicResource AppForeground}" Background="{DynamicResource AppBackground}" BorderBrush="{DynamicResource AppBorderBrush}" BorderThickness="1" Margin="0,0,0,10" Height="263">
                <StackPanel Margin="5">
                    <ListBox x:Name="ExtractionOutputBox" Height="230" Background="{DynamicResource AppBackground}" Foreground="{DynamicResource AppForeground}" BorderBrush="{DynamicResource AppBorderBrush}" BorderThickness="1" SelectionMode="Multiple" SelectionChanged="ExtractionOutputBox_SelectionChanged"/>
                </StackPanel>
            </GroupBox>

            <!-- Output Path -->
            <GroupBox Header="Output Path" Foreground="{DynamicResource AppForeground}" Background="{DynamicResource AppBackground}" BorderBrush="{DynamicResource AppBorderBrush}" BorderThickness="1">
                <DockPanel Margin="5">
                    <TextBox x:Name="OutputPathBox" Width="400" IsReadOnly="True" Foreground="{DynamicResource AppForeground}" Background="{DynamicResource AppBackground}" BorderBrush="{DynamicResource AppBorderBrush}" BorderThickness="1"/>
                    <Button x:Name="BrowseOutputButton" Content="Browse" Width="80" Margin="5,0,0,0" Click="BrowseOutputButton_Click"/>
                </DockPanel>
            </GroupBox>

        </StackPanel>

        <!-- Right panel -->
        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical" Margin="0,0,0,0">

            <!-- File Info -->
            <GroupBox Header="File Info" Foreground="{DynamicResource AppForeground}" Background="{DynamicResource AppBackground}" BorderBrush="{DynamicResource AppBorderBrush}" BorderThickness="1" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Filename:" Width="100" Foreground="{DynamicResource AppForeground}"/>
                        <TextBlock x:Name="FileNameText" Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource AppForeground}"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Codec:" Width="100" Foreground="{DynamicResource AppForeground}"/>
                        <TextBlock x:Name="CodecText" Grid.Row="1" Grid.Column="1" Foreground="{DynamicResource AppForeground}"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Channels:" Width="100" Foreground="{DynamicResource AppForeground}"/>
                        <TextBlock x:Name="ChannelsText" Grid.Row="2" Grid.Column="1" Foreground="{DynamicResource AppForeground}"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Sample Rate:" Width="100" Foreground="{DynamicResource AppForeground}"/>
                        <TextBlock x:Name="SampleRateText" Grid.Row="3" Grid.Column="1" Foreground="{DynamicResource AppForeground}"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Bitrate:" Width="100" Foreground="{DynamicResource AppForeground}"/>
                        <TextBlock x:Name="BitrateText" Grid.Row="4" Grid.Column="1" Foreground="{DynamicResource AppForeground}"/>
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Duration:" Width="100" Foreground="{DynamicResource AppForeground}"/>
                        <TextBlock x:Name="DurationText" Grid.Row="5" Grid.Column="1" Foreground="{DynamicResource AppForeground}"/>
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Size:" Width="100" Foreground="{DynamicResource AppForeground}"/>
                        <TextBlock x:Name="SizeText" Grid.Row="6" Grid.Column="1" Foreground="{DynamicResource AppForeground}"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Centered Extract Button -->
            <Button x:Name="ExtractTracksButton" Content="Extract Tracks" Width="200" Margin="0,0,0,10" HorizontalAlignment="Center" Click="ExtractTracksButton_Click"/>
        </StackPanel>

        <!-- Bottom FFmpeg Output -->
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="10,10,10,33" Grid.RowSpan="2">
            <TextBlock Text="FFmpeg Progress:" Foreground="{DynamicResource AppForeground}" Margin="0,0,0,5"/>
            <ProgressBar x:Name="FFmpegProgressBar"
                         Height="20"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Foreground="{DynamicResource AppBorderBrush}"
                         Background="{DynamicResource AppBackground}"
                         BorderBrush="{DynamicResource AppBorderBrush}"
                         BorderThickness="1"/>

            <TextBlock Text="FFmpeg Output:" Foreground="{DynamicResource AppForeground}" Margin="0,10,0,5"/>
            <TextBox x:Name="FFmpegOutputBox"
                     Height="150"
                     Background="{DynamicResource AppBackground}"
                     Foreground="{DynamicResource AppForeground}"
                     BorderBrush="{DynamicResource AppBorderBrush}"
                     BorderThickness="1"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"/>
        </StackPanel>

    </Grid>
</UserControl>
